
.alarm
    border: 2px solid currentColor
    padding: var(--semi-unit)
    color: dark
    hyphens: auto
    .map
        margin-top: var(--unit)
        width: 100%

nav
    position: absolute
    left: -140px
    a:hover
        color: primary
    ul
        stacked-list(spacing: 0, border: 1px solid dark)
        li
            padding: 0 var(--semi-unit) 

.newsletter-section
    input[type='email']
        width: 66%
        border: 1px solid grey
        padding: var(--semi-unit)
    input[type='submit']
        margin-left: var(--quarter-unit)
        padding: var(--semi-unit)
        background: primary
        color: white
        border-radius: 0.2em
        cursor: pointer
        &:hover
            text-decoration: underline
                
#intro
    font-size: var(--l)
    line-height: 1.3

.meetings
    vlist()

.meeting-time
    &::before
        content: ' â€¢ '

.meeting-title
    font-size: var(--l)
    font-weight: 500
    line-height: 1.2

.locations
    grid(gap: var(--semi-unit))

#people-list
    vlist(spacing: 0.3em)
    line-height: 1.3

.logos
    grid()
    align-items: center

.s1-main.logos
    margin-top: var(--unit)
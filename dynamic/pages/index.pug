                     if person.link
                        a(href=person.link): strong= person.name
                     else
                        strong= person.name
                     span= ': ' + person.description
                     if person.company
                        span= ', ' + person.company
      
      section#downloads.s1.underlined-links
         header.s1-header
            h2.h2 Downloads
         .s1-main
            ul.default-list
               li: a(href='documents/flyer-2020.pdf') Flyer 2020
               li: a(href='documents/flyer.pdf') Flyer 2019

      section#kontakt.s1
         header.s1-header
            h2.h2 Kontakt
         .s1-main
            p. 
               <a href='mailto:info@auskrisenlernen.ch'>info@auskrisenlernen.ch</a>
                oder <span class='nobr'>079 377 42 80</span>

